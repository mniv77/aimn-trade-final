    table.cell(paramTable, 0, 4, paramString4, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 5, paramString5, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 6, paramString6, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 7, paramString7, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 8, paramString8, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 9, paramString9, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 10, paramString10, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 11, paramString11, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 12, paramString12, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 13, paramString13, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 14, paramString14, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 15, paramString15, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 16, paramString16, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 17, paramString17, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
    table.cell(paramTable, 0, 18, paramString18, text_color=color.lime, bgcolor=color.black, text_size=size.tiny)
